.contents__left
.contents__center
  - @posts.each do |post|
    .content
      .content__left
        .content__left--image
      .content__right
        .content__right__top
          = link_to post.title, post_path(post.id), class: "content__right__top--title"
        .content__right__bottom
          .content__right__bottom--date
            = post.created_at
.contents__right

