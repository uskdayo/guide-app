.content
  .content__left
    .content__left--image{:style => "background-image: url(#{post.image});"}
  .content__right
    .content__right__top
      = link_to post.title, post_path(post.id), class: "content__right__top--title"
    .content__right__middle
      .content__right__middle--date
        = post.created_at
    .content__right__bottom  
      = simple_format post.content